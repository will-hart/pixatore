{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "ES2020",
    "lib": ["es6"],
    "target": "ES2019",
    "moduleResolution": "node",
    "allowJs": false,
    "declaration": true,
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*.ts"]
}
