{
  "compilerOptions": {
    "outDir": "lib",
    "target": "ES2019",
    "module": "commonjs",
    "allowJs": false,
    "strict": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "lib"]
}
