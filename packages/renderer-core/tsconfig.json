{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "moduleResolution": "Node",
    "target": "ES2019",
    "allowJs": false,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["src/**/*.ts"]
}
