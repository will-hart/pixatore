{
  "name": "pixatore",
  "version": "0.1.0",
  "license": "MIT",
  "author": "William Hart",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspaces run test",
    "test:client": "yarn workspace @pixatore/client test --watchAll",
    "test:game": "yarn workspace @pixatore/game test --watchAll",
    "lint": "yarn workspaces run lint",
    "client:serve": "yarn workspace @pixatore/client serve",
    "client:build": "yarn workspace @pixatore/client build",
    "client:tauri:build": "yarn workspace @pixatore/client tauri:build",
    "client:dev": "yarn workspace @pixatore/client dev",
    "server:build": "yarn workspace @pixatore/server build",
    "server:dev": "yarn  workspace @pixatore/server start",
    "game:build": "yarn workspace @pixatore/game build",
    "game:build:watch": "yarn workspace @pixatore/game build:watch",
    "build": "yarn run-s build:core build:artifacts",
    "build:core": "yarn workspaces run build:core",
    "build:artifacts": "run-p -n client:build server:build",
    "prebuild": "yarn lint",
    "dev:noapp": "cross-env DEBUG=PX:* yarn run-p -nr game:build:watch server:dev client:serve",
    "predev:noapp": "yarn build:core",
    "dev": "cross-env DEBUG=PX:* yarn run-p -nr game:build:watch server:dev client:dev",
    "predev": "yarn build:core",
    "postinstall": "yarn build:core"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "npm-run-all": "4.1.5"
  },
  "engines": {
    "node": "> 12.9.0"
  }
}
