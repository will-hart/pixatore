{
  "name": "pixatore",
  "version": "0.1.0",
  "license": "MIT",
  "author": "William Hart",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test:app": "yarn workspace @pixatore/app test --passWithNoTests",
    "test:shared": "yarn workspace @pixatore/shared test",
    "test": "run-s test:shared test:app",
    "app:serve": "yarn workspace @pixatore/app serve",
    "app:build": "yarn workspace @pixatore/app build",
    "app:test:unit": "yarn workspace @pixatore/app test:unit",
    "app:lint": "yarn workspace @pixatore/app lint",
    "app:tauri:build": "yarn workspace @pixatore/app tauri:build",
    "app:dev": "yarn workspace @pixatore/app dev",
    "docs": "yarn workspace @pixatore/docs start",
    "predocs": "run-s docs:api docs:fix",
    "docs:api": "run-p -n docs:api:app docs:api:server docs:api:shared",
    "docs:api:app": "yarn workspace @pixatore/app docs:api",
    "docs:api:server": "yarn workspace @pixatore/server docs:api",
    "docs:api:shared": "yarn workspace @pixatore/shared docs:api",
    "docs:build": "run-s docs:api docs:site",
    "docs:fix": "node scripts/fixApiDocs.js",
    "docs:serve": "yarn workspace @pixatore/docs start",
    "docs:site": "yarn workspace @pixatore/docs build",
    "server:build": "yarn workspace @pixatore/server build",
    "server:dev": "yarn  workspace @pixatore/server start",
    "server:loadtest": "yarn  workspace @pixatore/server loadtest",
    "shared:build": "yarn workspace @pixatore/shared build",
    "shared:build:watch": "yarn workspace @pixatore/shared build:watch",
    "build": "run-p -n app:build server:build",
    "prebuild": "yarn shared:build",
    "dev": "yarn run-p -nr shared:build:watch server:dev app:dev"
  },
  "devDependencies": {
    "glob": "^7.1.6",
    "npm-run-all": "4.1.5"
  }
}
