{
  "name": "pixatore",
  "version": "0.1.0",
  "license": "MIT",
  "author": "William Hart",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "yarn workspaces run test",
    "test:watch": "yarn workspaces run test --watchAll",
    "lint": "yarn workspaces run lint",
    "app:serve": "yarn workspace @pixatore/app serve",
    "app:build": "yarn workspace @pixatore/app build",
    "app:tauri:build": "yarn workspace @pixatore/app tauri:build",
    "app:dev": "yarn workspace @pixatore/app dev",
    "ecs:build": "yarn workspace @pixatore/ecs build",
    "ecs:build:watch": "yarn workspace @pixatore/ecs build:watch",
    "server:build": "yarn workspace @pixatore/server build",
    "server:dev": "yarn  workspace @pixatore/server start",
    "game:build": "yarn workspace @pixatore/game build",
    "game:build:watch": "yarn workspace @pixatore/game build:watch",
    "build": "yarn run-s build:core build:artifacts",
    "build:core": "yarn run-s ecs:build game:build",
    "build:artifacts": "run-p -n app:build server:build",
    "prebuild": "yarn lint",
    "dev": "yarn run-p -nr ecs:build:watch game:build:watch server:dev app:dev",
    "predev": "yarn run-p game:build ecs:build",
    "postinstall": "yarn build:core"
  },
  "devDependencies": {
    "npm-run-all": "4.1.5"
  }
}